# ================================
# Qdrant配置
# ================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=tax_policies
QDRANT_VECTOR_SIZE=1536

# ================================
# GLM配置
# ================================
GLM_API_KEY=your-glm-api-key-here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4/
GLM_MODEL=glm-4-flash
GLM_EMBEDDING_MODEL=embedding-2
GLM_MAX_TOKENS=2000
GLM_TEMPERATURE=0.3

# ================================
# 爬虫配置
# ================================
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_TIMEOUT=30
CRAWLER_RETRY_TIMES=3
CRAWLER_DELAY_MIN=3.0
CRAWLER_DELAY_MAX=6.0
CRAWLER_MAX_CONCURRENT=3
CRAWLER_START_YEAR=2022
CRAWLER_END_YEAR=2025
CRAWLER_LOG_LEVEL=INFO

# ================================
# 日志配置
# ================================
LOG_FILE=crawler.log
LOG_LEVEL=INFO
